# Prismy Demo Environment Configuration
# Safe configuration for demonstration purposes

# Demo mode flags
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_DEMO_DATA_ENABLED=true
DEMO_USER_EMAIL=demo@prismy.in
DEMO_USER_PASSWORD=Demo2024!

# Demo-safe Supabase instance (replace with actual demo instance)
NEXT_PUBLIC_SUPABASE_URL=https://demo-instance.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=demo_anon_key_here
SUPABASE_SERVICE_KEY=demo_service_key_here

# Limited AI providers for demo (using test/demo keys)
OPENAI_API_KEY=demo_openai_key_with_limits
ANTHROPIC_API_KEY=demo_anthropic_key_with_limits
GOOGLE_TRANSLATE_API_KEY=demo_translate_key_with_limits

# Demo payment integration (Stripe test mode)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_demo_stripe_key
STRIPE_SECRET_KEY=sk_test_demo_stripe_secret

# Demo analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=demo_ga_id
NEXT_PUBLIC_POSTHOG_KEY=demo_posthog_key

# Demo security settings
NEXTAUTH_SECRET=demo_auth_secret_replace_in_production
NEXTAUTH_URL=http://localhost:3000

# Demo rate limiting (more restrictive)
RATE_LIMIT_RPM=20
RATE_LIMIT_DAILY=100
MAX_FILE_SIZE=10485760  # 10MB for demo (vs 50MB production)
MAX_FILES_PER_SESSION=5

# Demo data cleanup settings
AUTO_CLEANUP_ENABLED=true
CLEANUP_INTERVAL_HOURS=24
SESSION_TIMEOUT_MINUTES=30

# Demo feature flags
ENABLE_BATCH_PROCESSING=true
ENABLE_ADVANCED_ANALYTICS=false  # Disabled in demo
ENABLE_TEAM_FEATURES=true
ENABLE_API_ACCESS=false  # Disabled in demo

# Demo content restrictions
CONTENT_FILTER_ENABLED=true
MAX_TEXT_LENGTH=10000
BLOCKED_FILE_TYPES=exe,bat,sh,cmd,scr
SCAN_FOR_PII=true

# Demo monitoring (optional)
SENTRY_DSN=demo_sentry_dsn_here
SENTRY_ENVIRONMENT=demo

# Demo CDN and assets
NEXT_PUBLIC_CDN_URL=https://demo-cdn.prismy.in
NEXT_PUBLIC_ASSETS_URL=https://demo-assets.prismy.in

# Demo database (if using separate demo DB)
DATABASE_URL=postgresql://demo_user:demo_pass@demo-db.host:5432/prismy_demo

# Demo cache settings
REDIS_URL=redis://demo-redis.host:6379
CACHE_TTL_DEMO=300  # 5 minutes for demo vs longer for production

# Demo email settings (for notifications)
SMTP_HOST=demo-smtp.host
SMTP_PORT=587
SMTP_USER=demo@prismy.in
SMTP_PASS=demo_email_password

# Demo webhook endpoints (for testing integrations)
WEBHOOK_SECRET=demo_webhook_secret
DEMO_WEBHOOK_URL=https://demo.prismy.in/api/webhooks

# Demo storage settings
DEMO_STORAGE_BUCKET=prismy-demo-storage
DEMO_STORAGE_REGION=us-east-1

# Version and environment info
NEXT_PUBLIC_APP_VERSION=demo-v1.0.0
NEXT_PUBLIC_BUILD_TIME=demo_build_timestamp
ENVIRONMENT=demo