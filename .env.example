# =================================
# PRISMY ENVIRONMENT VARIABLES
# =================================
# Copy this file to .env.local and fill in your values
# For production, use .env.production
# 
# ðŸš€ QUICK START:
# 1. Copy: cp .env.example .env.local
# 2. Get Supabase keys from: https://supabase.com/dashboard
# 3. Get AI API keys from providers
# 4. Run: npm run dev
# 
# ðŸ“š Full setup guide: docs/development/DEVELOPER_ONBOARDING.md
# =================================

# ====================================
# APPLICATION CONFIGURATION
# ====================================

# Node.js Environment
NODE_ENV=production
APP_VERSION=1.0.0
NEXT_PUBLIC_APP_VERSION=1.0.0

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# ====================================
# SUPABASE CONFIGURATION
# ====================================

# Supabase Project Settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role (Admin operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Supabase Auth Configuration
SUPABASE_JWT_SECRET=your-jwt-secret

# ====================================
# AI SERVICE PROVIDERS
# ====================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096

# Anthropic Configuration (Primary AI Provider)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=4096

# Cohere Configuration
COHERE_API_KEY=your-cohere-api-key
COHERE_MODEL=command-r
COHERE_TEMPERATURE=0.7

# Google AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# AI Provider Settings
AI_PROVIDER_TIMEOUT=30000
AI_DEFAULT_MAX_TOKENS=4096
AI_DEFAULT_TEMPERATURE=0.7
AI_PRIMARY_PROVIDER=anthropic
AI_FALLBACK_PROVIDERS=openai,cohere
AI_COST_OPTIMIZATION=true

# ====================================
# GOOGLE CLOUD SERVICES
# ====================================

# Google Cloud Translation API
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
GOOGLE_CLOUD_KEY_FILE=/path/to/service-account.json

# Alternative: Google Cloud Service Account JSON (base64 encoded)
GOOGLE_CLOUD_CREDENTIALS=base64-encoded-service-account-json

# Google Cloud Vision API (OCR)
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# ====================================
# REDIS CACHE CONFIGURATION
# ====================================

# Upstash Redis for Caching
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# Cache Configuration
REDIS_TTL_TRANSLATION=3600
REDIS_TTL_LANGUAGES=604800
REDIS_TTL_USER_HISTORY=3600

# ====================================
# STRIPE PAYMENT CONFIGURATION
# ====================================

# Stripe Keys
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs for Subscription Plans
STRIPE_STANDARD_PRICE_ID=price_standard_plan_id
STRIPE_PREMIUM_PRICE_ID=price_premium_plan_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_plan_id

# ====================================
# VIETNAMESE PAYMENT PROVIDERS
# ====================================

# VNPay Configuration
VNPAY_TMN_CODE=your_vnpay_terminal_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=https://your-domain.com/payment/vnpay/return
VNPAY_IPN_URL=https://your-domain.com/api/payments/vnpay/ipn

# MoMo Configuration
MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key
MOMO_ENDPOINT=https://payment.momo.vn/v2/gateway/api/create
MOMO_REDIRECT_URL=https://your-domain.com/payment/momo/return
MOMO_IPN_URL=https://your-domain.com/api/payments/momo/ipn

# ====================================
# MONITORING & ERROR TRACKING
# ====================================

# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=prismy-production
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ENVIRONMENT=production

# Sentry Performance Monitoring
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_SESSION_SAMPLE_RATE=0.1

# ====================================
# ANALYTICS & TRACKING
# ====================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
GOOGLE_ANALYTICS_API_SECRET=your-ga-api-secret

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Custom Analytics
ANALYTICS_API_KEY=your-analytics-api-key
ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com

# ====================================
# SECURITY & AUTHENTICATION
# ====================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# WebSocket Authentication (Phase 3.4)
WS_JWT_SECRET=your-websocket-jwt-secret-key

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-key

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# FEATURE FLAGS
# ====================================

# Core Features
FEATURE_DOCUMENT_TRANSLATION=true
FEATURE_BATCH_TRANSLATION=true
FEATURE_OCR_PROCESSING=true
FEATURE_AI_TRANSLATION=true
FEATURE_COLLABORATIVE_TRANSLATION=true

# Advanced Features
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_CUSTOM_MODELS=true
FEATURE_API_ACCESS=true
FEATURE_WEBHOOK_INTEGRATION=true

# Experimental Features
FEATURE_VOICE_TRANSLATION=false
FEATURE_VIDEO_TRANSLATION=false
FEATURE_MACHINE_LEARNING_INSIGHTS=false
FEATURE_PREDICTIVE_TRANSLATION=false

# AI Features
FEATURE_AI_DOCUMENT_ANALYSIS=true
FEATURE_AI_QUALITY_ASSESSMENT=true
FEATURE_AI_CONTEXT_UNDERSTANDING=true
FEATURE_AI_STYLE_MATCHING=true

# Regional Features
FEATURE_VIETNAMESE_PAYMENTS=true
FEATURE_MULTILINGUAL_SUPPORT=true
FEATURE_CULTURAL_ADAPTATION=true

# ====================================
# PERFORMANCE & OPTIMIZATION
# ====================================

# Translation Service Configuration
TRANSLATION_CACHE_TTL=3600
MAX_TRANSLATION_LENGTH=50000
DEFAULT_QUALITY_TIER=standard
TRANSLATION_TIMEOUT=30000

# Document Processing
MAX_DOCUMENT_SIZE=10485760
SUPPORTED_DOCUMENT_FORMATS=pdf,docx,txt,md,html
DOCUMENT_PROCESSING_TIMEOUT=60000

# OCR Configuration (Phase 3.3-A)
TESSDATA_PREFIX=./tessdata
MAX_CONCURRENT_OCR=3
OCR_TIMEOUT=30000
OCR_DPI=300
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=0.7
OCR_LANGUAGE_DETECTION=true
OCR_IMAGE_PREPROCESSING=true

# Language Detection Configuration (Phase 3.3-B)
MAX_CHUNK_TOKENS=8000
MIN_TEXT_LENGTH=50
OVERLAP_TOKENS=200
LANGUAGE_DETECTION_TIMEOUT=10000

# Batch Processing
BATCH_SIZE_LIMIT=50
BATCH_PROCESSING_TIMEOUT=300000
CONCURRENT_BATCH_LIMIT=5

# ====================================
# SUBSCRIPTION & USAGE LIMITS
# ====================================

# Rate Limiting by Tier
RATE_LIMIT_FREE_TIER=10
RATE_LIMIT_STANDARD_TIER=50
RATE_LIMIT_PREMIUM_TIER=200
RATE_LIMIT_ENTERPRISE_TIER=1000

# Usage Limits
USAGE_LIMIT_FREE=10
USAGE_LIMIT_STANDARD=50
USAGE_LIMIT_PREMIUM=200
USAGE_LIMIT_ENTERPRISE=1000

# Character Limits
CHARACTER_LIMIT_FREE=10000
CHARACTER_LIMIT_STANDARD=100000
CHARACTER_LIMIT_PREMIUM=500000
CHARACTER_LIMIT_ENTERPRISE=2000000

# Document Limits
DOCUMENT_LIMIT_FREE=0
DOCUMENT_LIMIT_STANDARD=10
DOCUMENT_LIMIT_PREMIUM=100
DOCUMENT_LIMIT_ENTERPRISE=-1

# ====================================
# DEPLOYMENT & INFRASTRUCTURE
# ====================================

# Vercel Configuration
VERCEL_URL=your-vercel-url
VERCEL_ENV=production

# Database Configuration
DATABASE_URL=your-database-connection-string
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# CDN Configuration
CDN_URL=https://your-cdn-url.com
ASSET_PREFIX=https://your-cdn-url.com

# ====================================
# LOGGING & DEBUGGING
# ====================================

# Log Configuration
LOG_LEVEL=error
LOG_FORMAT=json
LOG_DESTINATION=console

# Debug Settings
DEBUG_TRANSLATION_SERVICE=false
DEBUG_AI_PROVIDERS=false
DEBUG_CACHE_OPERATIONS=false
DEBUG_WEBHOOK_PROCESSING=false

# ====================================
# WEBHOOK CONFIGURATION
# ====================================

# Webhook URLs
WEBHOOK_TRANSLATION_COMPLETE=https://your-domain.com/webhooks/translation-complete
WEBHOOK_DOCUMENT_PROCESSED=https://your-domain.com/webhooks/document-processed
WEBHOOK_SUBSCRIPTION_CHANGED=https://your-domain.com/webhooks/subscription-changed

# Webhook Security
WEBHOOK_SIGNATURE_SECRET=your-webhook-signature-secret
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# ====================================
# THIRD-PARTY INTEGRATIONS
# ====================================

# Email Service (SendGrid/Mailgun/etc.)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME=Prismy

# SMS Service (Twilio/etc.)
SMS_SERVICE_API_KEY=your-sms-service-api-key
SMS_FROM_NUMBER=+1234567890

# Cloud Storage (AWS S3/Google Cloud Storage)
CLOUD_STORAGE_BUCKET=your-storage-bucket
CLOUD_STORAGE_ACCESS_KEY=your-storage-access-key
CLOUD_STORAGE_SECRET_KEY=your-storage-secret-key
CLOUD_STORAGE_REGION=us-east-1

# ====================================
# HEALTH MONITORING
# ====================================

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Service Health Endpoints
HEALTH_CHECK_TRANSLATION_SERVICE=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_AI_PROVIDERS=true

# ====================================
# COMPLIANCE & LEGAL
# ====================================

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
COOKIE_CONSENT_REQUIRED=true

# Terms of Service
TERMS_VERSION=1.0
PRIVACY_POLICY_VERSION=1.0
COOKIE_POLICY_VERSION=1.0

# ====================================
# EMERGENCY CONFIGURATION
# ====================================

# Emergency Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're performing scheduled maintenance. Please check back soon."

# Emergency Contacts
EMERGENCY_EMAIL=admin@your-domain.com
EMERGENCY_PHONE=+1234567890

# ====================================
# END OF CONFIGURATION
# ====================================

# Note: This file contains all possible environment variables for Prismy production.
# You may not need all of these variables depending on your deployment configuration.
# Please review each section and configure only the variables you need.
# 
# Security Reminder:
# - Never commit actual production values to version control
# - Use strong, unique secrets for all secret keys
# - Regularly rotate API keys and secrets
# - Monitor access logs for suspicious activity
# - Enable 2FA on all third-party services