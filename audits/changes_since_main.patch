+  FOR ALL USING (
+    EXISTS (
+      SELECT 1 FROM translation_jobs j 
+      WHERE j.id = chat_messages.job_id 
+        AND (j.user_id = auth.uid() OR auth.uid() IS NULL)
+    )
+  );
