+      variant: {
+        // Master Prompt variants: default/ghost/primary
+        default: "bg-accent text-white hover:bg-accent/90",
+        ghost: "hover:bg-gray-100 hover:text-gray-900",
+        primary: "bg-accent text-white hover:bg-accent/90",
