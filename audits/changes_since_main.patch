+  au.id,
+  20,
+  0,
+  'free'
+FROM auth.users au
+LEFT JOIN user_credits uc ON au.id = uc.user_id
+WHERE uc.user_id IS NULL
+ON CONFLICT (user_id) DO NOTHING;
