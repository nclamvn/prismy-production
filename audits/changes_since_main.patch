+RETURNS TABLE (
+    credits_left INTEGER,
+    total_earned INTEGER,
+    total_spent INTEGER,
+    tier TEXT
+) AS $$
+BEGIN
+    RETURN QUERY
+    SELECT 
+        uc.credits_left,
+        uc.total_earned,
+        uc.total_spent,
+        uc.tier
+    FROM user_credits uc
+    WHERE uc.user_id = user_uuid;
